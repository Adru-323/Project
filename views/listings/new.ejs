<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h3>Create new listing </h3>
     <br>
    <form method="post" action="/listings" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title"> Title</label>
            <input type="text" placeholder="Enter title" name="listing[title]" class="form-control" required >
            <div class="valid-feedback">Title looks good</div>
            <div class="invalid-feedback">Add Title </div>
        </div>

        <div class="mb-3" >
            <label class="form-label" for="description"> Description</label>
            <textarea type="text" placeholder="Add description" name="listing[description]" 
                class="form-control"></textarea>
        </div>

 
        <div class="mb-3">
             <label class="form-label" for="image">  Upload Image </label>
              <input type="file" name="listing[image]" class="form-control" required>  
        </div>

        <div class="row">
        <div class="mb-3 col-md-4" >
            <label class="form-label" for="price"> Price</label>
           <input type="number" placeholder="Enter price" name="listing[price]"  class="form-control" >
           <div class="invalid-feedback"> Please enter the valid price</div>
        </div>
        
        <div class="mb-3 col-md-8" >
             <label class="form-label" for="country"> Country</label>
              <input type="text" placeholder="Enter location" name="listing[country]"  class="form-control" >
              <div class="invalid-feedback">Enter the country name</div>
        </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="location"> Location</label>
             <input type="text" placeholder="Enter country" name="listing[location]"  class="form-control" >
             <div class="invalid-feedback"> Please Enter the location</div>
        </div>

        <!-- hw -->
 <div class="mb-3">
    <label class="form-label" for="category">Category</label>
    <select name="listing[category]" id="category" class="form-select" required>
        <option value="">-- Select a category --</option>
        <option value="mountains">Mountains</option>
        <option value="artic">Artic</option>
        <option value="pool">Pool</option>
        <option value="farms">Farms</option>
        <option value="trending">Trending</option>
    </select>
    <div class="invalid-feedback">Please select a category</div>
</div>

        <br>
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
    </div>
    </div>