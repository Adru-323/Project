<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-12">
        <h3>Listings matching "<%= searchTerm %>"</h3>
        <% if(listings.length > 0) { %>
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
                <% for (let list of listings) { %>
                    <a href="/listings/<%= list.id %>" class="listing-link">
                        <div class="card col listing-card">
                            <img src="<%= list.image.url %>" class="card-img-top" alt="listings-image" style="height: 20rem;">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%= list.title %></b><br>
                                    &#8377; <%= list.price.toLocaleString("en-IN") %>/Night
                                </p>
                            </div>
                        </div>
                    </a>
                <% } %>
            </div>
            <!-- empty string mile toh bcz db nhi  milatohh empty send krta h -->
        <% } else { %>  
            <div class="alert alert-warning" role="alert">
                No listings found matching your search. Please try a different location.
            </div>
        <% } %>
    </div>
</div>